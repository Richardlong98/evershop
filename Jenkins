pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'git@github.com:Richardlong98/evershop.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'ansible-playbook -i inventory playbook.yml'
            }
        }

        stage('Deploy to Server') {
            steps {
                sshagent(['deploy-key']) {
                    sh 'ansible-playbook -i inventory deploy.yml'
                }
            }
        }
    }
}
